{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 16",
    "extends": "@tsconfig/node16/tsconfig.json",

    "exclude": [
      "node_modules", 
      "build"
    ],
  
    "compilerOptions": {
      "rootDir": "src",
      "outDir": "build",
      "lib": ["es2021"],
      "module": "commonjs",
      "target": "es2021",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "resolveJsonModule": true
    }
  }